#!/usr/bin/env bash
# Script that configures a new Ubuntu machine to respect above requirements

# Update and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create Hello World page
echo "Hello World!" | sudo tee /var/www/html/index.html

# Configure redirection
redirect_config="server_name _;\n\tlocation /redirect_me {\n\t\treturn 301 https://nevnow.tech;\n\t}"
sudo sed -i "s|server_name _;|$redirect_config|" /etc/nginx/sites-available/default

# Test Nginx configuration
sudo nginx -t

# Restart Nginx
sudo service nginx restart
